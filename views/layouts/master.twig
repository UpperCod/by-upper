{% spaceless %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600&display=swap" rel="stylesheet">
    <script>var __dirsite = "{{site.link}}", __dirtheme = "{{theme.link}}";</script>
    <style>
        html,body,main{width: 100%; height: 100%; margin: 0px;}
        body{font-family: 'Poppins', sans-serif;}
    </style>
    <link rel="stylesheet" href="{{theme.link}}/style.css">
    {{fn("wp_head")}}
</head>
<body {{fn("body_class")}}>
    {% block header %}
        {% include "includes/header.twig" %}
    {% endblock %}
    
    <main {{fn("post_class","site-main")}}>  
    {% block content %}
        {{fn("the_content")}}
    {% endblock %}
    {% block footer %}
         {% include "includes/footer.twig" %}
    {% endblock %}
    </main>
   
    <script src="{{theme.link}}/static/bundle.js"></script>
</body>
</html>     
{% endspaceless %}